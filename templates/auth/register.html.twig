{% extends 'default.html.twig' %}

{% block body %}
<div class="w-full max-w-xs">
    {{ form_start(form) }}
    <div class="mb-4">
        {{ form_row(form.username) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.email) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.plainPassword.first) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.plainPassword.second) }}
    </div>

    <button type="submit" class="btn btn-blue">Register!</button>
    {{ form_end(form) }}
</div>
{% endblock %}
